<!DOCTYPE html>
<html lang="{{ lang }}" dir="{{ lang | languageDirection }}">
  <head>
	<meta charset="utf-8">
	<title>{{ title }}</title>
  </head>
  <body>
	<h1>{{ title }}</h1>
  {% __ 'helloworld', {name: 'Alice'} %}
	{{ content | safe }}
  {% set count = collections.posts | length %}
  <p>{% __ 'posts_count', {count: count} %}</p>
  {% if lang === 'en' %}
    {% for post in collections.posts_en | reverse %}
        {% set french = post | findTranslation(collections.posts, lang, 'fr') %}
        {% set deutsch = post | findTranslation(collections.posts, lang, 'de-DE') %}
        <p><a href="{{ post.url }}">{{ post.data.title }}</a> (<a href="{{ french }}" hreflang="fr">FR</a>, <a href="{{ deutsch }}" hreflang="de">DE</a>)</p>
    {% endfor %}
  {% endif %}
  </body>
</html>
